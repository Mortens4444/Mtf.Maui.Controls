<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:Mtf.Maui.Controls.Converters"
             xmlns:vm="clr-namespace:Mtf.Maui.Controls.ViewModels"
             xmlns:local="clr-namespace:Mtf.Maui.Controls.Resources.Styles"
             x:Class="Mtf.Maui.Controls.ImageLink"
             WidthRequest="{Binding Source={x:Reference Root}, Path=WidthRequest}"
             HeightRequest="{Binding Source={x:Reference Root}, Path=HeightRequest}"
             x:Name="Root"
             x:DataType="vm:ImageLinkViewModel">

    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:LibraryStyles />
            </ResourceDictionary.MergedDictionaries>
            <c:ImagePathConverter x:Key="ImagePathConverter" />
            <c:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />
        </ResourceDictionary>
    </ContentView.Resources>
    
    <ContentView.Content>
        <Grid x:Name="InnerRoot">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateCommand}"
                                      CommandParameter="{Binding Source={x:Reference Root}, Path=Parameter}" />
            </Grid.GestureRecognizers>

            <Image x:Name="LinkImage" Aspect="AspectFill">
                <Image.Source>
                    <Binding Path="ImageSource" Converter="{StaticResource ImagePathConverter}">
                        <Binding.ConverterParameter>
                            <x:Int32>0</x:Int32>
                        </Binding.ConverterParameter>
                    </Binding>
                </Image.Source>
            </Image>
        </Grid>
    </ContentView.Content>
</ContentView>